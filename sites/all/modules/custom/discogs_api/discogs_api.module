/**
 * Gets one artist, based on his DCID
 *
 * @param $artist_id int
 *   Artist Discogs ID
 *
 * @return object
 *   The artist object, or an error message
 */
function discogs_api_get_artist($artist_id) {
  $uri = DISCOGS_API . 'artists/' . (int)$artist_id;
  return _discogs_api_get_query($uri);
}

